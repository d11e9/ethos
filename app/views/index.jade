doctype html
html
	head
		title &Xi;thos
		script( src="" )
		link( rel="stylesheet", href="app://ethos/app/styles/style.css" )
		link( rel="stylesheet", href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.1.0/css/font-awesome.css" )
		link( rel="shortcut icon", href="app://ethos/app/images/favicon.ico", type="image/x-icon" )
		link( rel="icon", href="app://ethos/app/images/favicon.ico", type="image/x-icon" )
		
	body#body
		img#ethos-logo( title="Ethos, made for Ethereum", src="app://ethos/app/images/ethos-logo.png" )

		p.subtitle <span class="key-combo">Ctrl+H</span> to come home.

		input#search( type="search" )

		#menu
			a( href="#", title="Settings" )
				i.fa.fa-share-alt
			ul.inner
				li
					a Settings
					a Network
					a About

		ul#dapps
			- for (var i in dapps) {
				- if (!dapps[i].iconAsset) {
					li
						a( href=":eth?dapp=#{dapps[i].name}" )
							i( class="fa fa-#{dapps[i].icon}" )
							span= dapps[i].name
				- } else {
					li
						a( href=":eth?dapp=#{dapps[i].name}" )
							img( src="#{dapps[i].iconAsset}" )
							span= dapps[i].name
				- }
			- }
			li
				a( href="#add" )
					i( class="fa fa-plus")
					span Add √êApp

		script.
			window.onload = function(){
				document.getElementById('body').className += ' loaded';
				if (window.location.hash === '#home') {
					document.getElementById('body').className += ' quick-load';
					window.location.hash = ''
				}

				var searchInput = document.getElementById( 'search' )
				searchInput.onkeyup = function(){ console.log( 'search: ', searchInput.value )}

			}
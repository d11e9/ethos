{
  "name": "Ethos",
  "version": "0.0.4",
  "description": "Ethereum Browser",
  "main": "app://ethos/static/bootstrap.html",
  "node-main": "./lib/server.js",
  "node-remote": "http://eth;app://",
  "chromium-args": "--disable-web-security",
  "window": {
    "show": true,
    "toolbar": true,
    "frame": true,
    "icon": "./static/assets/ethos-logo.png",
    "position": "center",
    "width": 600,
    "height": 600,
    "min_width": 300,
    "min_height": 200
  },
  "user-agent": "Mozilla/5.0 (%osinfo) AppleWebKit/%webkit_ver (KHTML, like Gecko) %name/%ver Safari/%webkit_ver",
  "inject-js-start": "./static/assets/inject.bundle.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "server": "npm run compile && coffee ./lib/server.coffee",
    "build": "npm install && rm -r ./build/Ethos* && npm run compile && coffee ./build/build.coffee",
    "build-dev": "npm run compile && nwbuild -r .",
    "dev": "nwbuild -r .",
    "compile": "npm run compile-inject",
    "compile-inject": "browserify -t coffeeify -e ./lib/inject.coffee > ./static/assets/inject.bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/projectdnet/ethos.git"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "coffee-script": "~1.7.1",
    "express": "~4.8.4",
    "jade": "~1.5.0",
    "jquery": "~2.1.1",
    "node-json-rpc": "0.0.1",
    "node-torrent": "~0.2.1",
    "nt": "^0.4.1",
    "request": "~2.40.0",
    "winston": "^0.7.3",
    "coffeeify": "~0.7.0",
    "underscore": "~1.7.0"
  },
  "devDependencies": {
    "node-webkit-builder": "~0.1.1",
    "browserify": "~5.10.0"
  }
}

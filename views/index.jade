					a Network
					a About

		ul#dapps
			- for (var i in dapps) {
				li
					a( href=":eth?dapp=#{dapps[i].name}" )
						i( class="fa fa-#{dapps[i].icon}")
						span= dapps[i].name
			- }
			li
				a( href="#add" )
					i( class="fa fa-plus")
					span Add √êApp

		script.

			window.onload = function(){
				document.getElementById('body').className += ' loaded';
				if (window.location.hash === '#home') {
					document.getElementById('body').className += ' quick-load';
					window.location.hash = ''
				}

				var searchInput = document.getElementById( 'search' )
				searchInput.onkeyup = function(){ console.log( 'search: ', searchInput.value )}

			}